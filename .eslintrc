{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
	"plugins": [
		"mocha",
    "babel"
	],
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-underscore-dangle": 0,
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "new-cap": [
      "error",
      {
        "properties": false
      }
    ],
		"mocha/no-exclusive-tests": "error",
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1
  }
}
